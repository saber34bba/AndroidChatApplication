<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mouboukr.sofianeaoufi.chat.FirstActivity">







<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/menu_image">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:background="@mipmap/kalemni_icon"
        android:id="@+id/imageView6" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="56dp"
        android:text="All Right Reserved to M.Boubakeur and A.Sofiane"
        android:textColor="@android:color/black"
        android:textSize="15sp" />
    <TextView
        android:fontFamily="casual"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="46dp"
        android:text="Welcome to KAlemni "
        android:textColor="@android:color/white"
        android:textSize="25sp" />



</RelativeLayout>




    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/background"
        android:orientation="horizontal"
        >

        <Button
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/ic_person"
            android:background="@null"
            android:id="@+id/log_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="signin"
            android:text="login"
            android:textAllCaps="false"
            />

        <Button
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:id="@+id/register_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@null"
            android:onClick="regitration"
            android:text="Register" />


        <Button
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:id="@+id/aboutUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@null"
            android:onClick="about"
            android:text="about Us" />

    </RelativeLayout>


</RelativeLayout>
